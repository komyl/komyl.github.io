---
import Header from '../components/Header.astro';
interface Props {
	title: string;
	description: string;
}
const { title, description } = Astro.props;
const currentYear = new Date().getFullYear();
---
<!doctype html>
<html lang="en" dir="ltr">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
        <link rel="manifest" href="/manifest.json">
        <meta name="theme-color" content="#1a1a1a">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

		<script is:inline src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<footer>
			<p>&copy; {currentYear} Komeyl Kalhorinia. All rights reserved.</p>
		</footer>
	</body>
</html>

<style is:global>
	*,
	*::before,
	*::after {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	:root {
		--spacing-unit: 8px;
		--border-radius-large: 24px;
		--font-family-body: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
		--color-primary: #aE50f5;
		--color-secondary: #0a84ff;
		--color-background: #101010;
		--color-text: rgba(255, 255, 255, 0.9);
		--color-text-muted: rgba(235, 235, 245, 0.6);
		--glass-background: rgba(40, 40, 40, 0.5);
		--glass-border: rgba(255, 255, 255, 0.1);
	}

	html.light-theme {
		--color-background: #f2f2f7;
		--color-text: rgba(0, 0, 0, 0.85);
		--color-text-muted: rgba(60, 60, 67, 0.65);
		--glass-background: rgba(255, 255, 255, 0.6);
		--glass-border: rgba(0, 0, 0, 0.1);
	}

	html {
		font-family: var(--font-family-body);
		background-color: var(--color-background);
		color: var(--color-text);
		scroll-behavior: smooth;
		transition: color 0.3s, background-color 0.3s;
	}

	body {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}
	
	main {
		flex-grow: 1;
        width: 100%;
        max-width: 1200px;
        margin-left: auto;
		margin-right: auto;
        padding: calc(var(--spacing-unit) * 4) calc(var(--spacing-unit) * 2);
	}

	footer {
		text-align: center;
		padding: calc(var(--spacing-unit) * 4);
		color: var(--color-text-muted);
		font-size: 0.9rem;
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
	}
</style>