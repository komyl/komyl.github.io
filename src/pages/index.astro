---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';

// Add "as const" to the end of the array definitions
const commercialProjects = [
	{ name: 'Major Banking System', status: 'active', technologies: ['React', 'Java'], duration: '2 Years', url: '/projects/project-a' },
	{ name: 'Customer Management Platform', status: 'finished', technologies: ['Vue', '.NET'], duration: '18 Months', url: '/projects/project-b' },
] as const; // <--- ADD THIS

const academicProjects = [
	{ name: 'Medical Data Analysis', status: 'suspended', technologies: ['Python', 'Astro'], duration: '6 Months', url: '/projects/project-c' },
	{ name: 'E-Learning Platform', status: 'active', technologies: ['Svelte', 'Go'], duration: 'Ongoing', url: '/projects/project-d' },
] as const; // <--- AND ADD THIS

---
<Layout title="Komeyl Kalhorinia | Home" description="KomeylBlog - Portfolio and blog of Komeyl Kalhorinia.">
	
	<section class="project-section">
		<h2>Commercial Projects</h2>
		<div class="project-slider">
			{commercialProjects.map(project => (
				<ProjectCard {...project} />
			))}
		</div>
	</section>

	<section class="project-section">
		<h2>Personal & Academic Projects</h2>
		<div class="project-slider">
			{academicProjects.map(project => (
				<ProjectCard {...project} />
			))}
		</div>
	</section>

</Layout>

<style>
	/* Styles remain the same */
	.project-section {
		margin-bottom: 4rem;
	}
	.project-section h2 {
		font-size: 2rem;
		margin-bottom: 1.5rem;
		border-bottom: 2px solid var(--color-primary);
		padding-bottom: 0.5rem;
		display: inline-block;
	}
	.project-slider {
		display: grid;
		grid-auto-flow: column;
		grid-auto-columns: 80%;
		gap: 1rem;
		overflow-x: auto;
		padding-bottom: 1rem;
		-ms-overflow-style: none;
  		scrollbar-width: none;
	}
	.project-slider::-webkit-scrollbar {
  		display: none;
	}
	@media (min-width: 768px) {
		.project-slider {
			grid-auto-columns: 40%;
		}
	}
    @media (min-width: 1024px) {
		.project-slider {
			grid-auto-columns: 32%;
		}
	}
</style>