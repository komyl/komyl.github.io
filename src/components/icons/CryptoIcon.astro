---
import * as simpleIcons from 'simple-icons/icons';
interface Props { name: string; }
const { name } = Astro.props;
const iconKey = 'si' + name.toLowerCase();
const icon = (simpleIcons as any)[iconKey];
---
<div class="icon-wrapper" title={name}>
    {icon ? <Fragment set:html={icon.svg} /> : name.slice(0,1)}
</div>
<style>
.icon-wrapper { display: flex; align-items: center; justify-content: center; width: 24px; height: 24px; }
.icon-wrapper svg { width: 100%; height: 100%; fill: currentColor; }
</style>