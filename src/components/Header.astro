---
// src/components/Header.astro
import ThemeToggleButton from './ThemeToggleButton.astro'; // Import the new component

const navItems = [
    { text: "About Me", url: "/about" },
    { text: "Contact", url: "/contact" },
    { text: "Support Me", url: "/support" },
    { text: "Social Media", url: "/social" },
]
---
<header>
    <nav class="navbar">
        <div class="brand-name">
            <a href="/">Komeyl Kalhorinia</a>
        </div>
        <div class="nav-links-desktop">
            {navItems.map(item => <a href={item.url}>{item.text}</a>)}
            <ThemeToggleButton />
        </div>
        <div class="hamburger-menu" id="hamburger-button">
            <svg width="30" height="30" viewBox="0 0 100 80" fill="white">
                <rect width="100" height="15" rx="8"></rect>
                <rect y="30" width="100" height="15" rx="8"></rect>
                <rect y="60" width="100" height="15" rx="8"></rect>
            </svg>
        </div>
    </nav>
    <div class="mobile-menu" id="mobile-menu-panel">
        <div class="mobile-menu-top-row">
            <span>Navigation</span>
            <ThemeToggleButton />
        </div>
        <hr class="mobile-menu-divider" />
        {navItems.map(item => <a href={item.url}>{item.text}</a>)}
    </div>
</header>

<script>
    // ...
</script>

<style>
    header {
        position: relative;
        z-index: 10;
    }
	.navbar {
		display: flex;
		justify-content: space-between;
		align-items: center;
        padding: 1rem;
        max-width: 1200px;
        margin: 0 auto;
	}
    .brand-name a {
        color: var(--color-text);
        text-decoration: none;
        font-size: 1.5rem;
        font-weight: 700;
    }
    .nav-links-desktop {
        display: none;
        align-items: center; /* Align items vertically */
        gap: 2rem;
    }
    .nav-links-desktop a {
        color: var(--color-text);
        text-decoration: none;
        font-size: 1rem;
        transition: color 0.2s ease;
    }
    .nav-links-desktop a:hover {
        color: var(--color-primary);
    }
    .hamburger-menu {
        cursor: pointer;
        z-index: 20;
    }
    .mobile-menu {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        background-color: var(--color-surface);
        max-height: 0;
        overflow: hidden;
        padding: 0;
        transition: max-height 0.3s ease-out, padding 0.3s ease-out;
        border-bottom-left-radius: 8px;
        border-bottom-right-radius: 8px;
    }
    .mobile-menu.is-open {
        max-height: 500px;
        padding: 2rem;
    }
    /* New styles for mobile menu header */
    .mobile-menu-top-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
    }
    .mobile-menu-top-row span {
        font-weight: 700;
        color: #a0a0a0;
    }
    .mobile-menu-divider {
        width: 100%;
        border: none;
        border-top: 1px solid var(--color-border);
    }
    .mobile-menu a {
        color: var(--color-text);
        text-decoration: none;
        font-size: 1.2rem;
        width: 100%;
        text-align: center;
    }
    
    @media (min-width: 768px) {
        .nav-links-desktop {
            display: flex;
        }
        .hamburger-menu {
            display: none;
        }
        .mobile-menu {
            display: none;
        }
    }
</style>