---
import ThemeToggleButton from './ThemeToggleButton.astro';

const navItems = [
    { text: "About Me", url: "/about" },
    { text: "Contact", url: "/contact" },
    { text: "Support Me", url: "/support" },
    { text: "Social Media", url: "/social" },
]
---
<header>
    <nav class="navbar">
        <div class="brand-name">
            <a href="/">Komeyl Kalhorinia</a>
        </div>
        <div class="nav-links-desktop">
            {navItems.map(item => <a href={item.url}>{item.text}</a>)}
            <ThemeToggleButton />
        </div>
        <div class="nav-controls-mobile">
            <ThemeToggleButton />
            <div class="hamburger-menu" id="hamburger-button">
                <svg width="30" height="30" viewBox="0 0 100 80" fill="currentColor">
                    <rect width="100" height="15" rx="8"></rect>
                    <rect y="30" width="100" height="15" rx="8"></rect>
                    <rect y="60" width="100" height="15" rx="8"></rect>
                </svg>
            </div>
        </div>
    </nav>
    <div class="mobile-menu" id="mobile-menu-panel">
        {navItems.map(item => <a href={item.url}>{item.text}</a>)}
    </div>
</header>

<script is:inline>
    const hamburgerButton = document.getElementById('hamburger-button');
    const mobileMenuPanel = document.getElementById('mobile-menu-panel');

    if (hamburgerButton && mobileMenuPanel) {
        hamburgerButton.addEventListener('click', (e) => {
            e.stopPropagation();
            mobileMenuPanel.classList.toggle('is-open');
        });
    }
</script>

<style>
    header {
        position: sticky;
        top: 0;
        z-index: 10;
        background-color: var(--glass-background);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-bottom: 1px solid var(--glass-border);
    }
	.navbar {
		display: flex;
		justify-content: space-between;
		align-items: center;
        width: 100%;
        max-width: none;
        margin: 0;
        padding: calc(var(--spacing-unit) * 1.5) calc(var(--spacing-unit) * 2);
		box-sizing: border-box;
	}
    .brand-name a {
        color: var(--color-text);
        text-decoration: none;
        font-size: 1.5rem;
        font-weight: 700;
    }
    .nav-links-desktop {
        display: none;
        align-items: center;
        gap: calc(var(--spacing-unit) * 4);
    }
    .nav-links-desktop a {
        color: var(--color-text);
        text-decoration: none;
        font-size: 1rem;
        transition: color 0.2s ease;
    }
    .nav-links-desktop a:hover {
        color: var(--color-primary);
    }
    .nav-controls-mobile {
        display: flex;
        align-items: center;
        gap: var(--spacing-unit);
    }
    .hamburger-menu {
        cursor: pointer;
        z-index: 20;
        color: var(--color-text);
        padding: var(--spacing-unit);
        margin: calc(-1 * var(--spacing-unit));
    }
    .mobile-menu {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: calc(var(--spacing-unit) * 2);
        background-color: var(--color-background);
        border-bottom: 1px solid var(--glass-border);
        max-height: 0;
        overflow: hidden;
        padding: 0;
        transition: max-height 0.3s ease-out, padding 0.3s ease-out;
    }
    .mobile-menu.is-open {
        max-height: 500px;
        padding: calc(var(--spacing-unit) * 3) 0;
    }
    .mobile-menu a {
        color: var(--color-text);
        text-decoration: none;
        font-size: 1.2rem;
        width: 100%;
        text-align: center;
        padding: var(--spacing-unit) 0;
    }
    
    @media (min-width: 768px) {
        .nav-links-desktop {
            display: flex;
        }
        .nav-controls-mobile {
            display: none;
        }
        .mobile-menu {
            display: none;
        }
    }
</style>