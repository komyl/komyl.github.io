---
import ThemeToggleButton from './ThemeToggleButton.astro';


const navItems = [
    { text: "About Me", url: "/about" },
    { text: "Contact", url: "/contact" },
    { text: "Support Me", url: "/support" },
    { text: "Social Media", url: "https://linktr.ee/komylf", external: true },
]
---
<header>
    <nav class="navbar">
        <div class="brand-name">
            <a href="/">Komeyl Kalhorinia</a>
        </div>
        <div class="nav-links-desktop">
            {navItems.map(item => (
                <a href={item.url} target={item.external ? "_blank" : "_self"} rel={item.external ? "noopener noreferrer" : ""}>
                    {item.text}
                </a>
            ))}
            <ThemeToggleButton />
        </div>
        <div class="nav-controls-mobile">
            <ThemeToggleButton />
            <div class="hamburger-menu" id="hamburger-button">
                </div>
        </div>
    </nav>
    <div class="mobile-menu" id="mobile-menu-panel">
        {navItems.map(item => (
            <a href={item.url} target={item.external ? "_blank" : "_self"} rel={item.external ? "noopener noreferrer" : ""}>
                {item.text}
            </a>
        ))}
    </div>
</header>

<script is:inline>
    const hamburgerButton = document.getElementById('hamburger-button');
    const mobileMenuPanel = document.getElementById('mobile-menu-panel');

    if (hamburgerButton && mobileMenuPanel) {
        hamburgerButton.addEventListener('click', (e) => {
            e.stopPropagation();
            mobileMenuPanel.classList.toggle('is-open');
        });
    }
</script>

<style>
    header {
        position: sticky;
        top: 0;
        z-index: 10;
        background-color: var(--glass-background);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-bottom: 1px solid var(--glass-border);
    }
	.navbar {
		display: flex;
		justify-content: space-between;
		align-items: center;
        padding: calc(var(--spacing-unit) * 1.5) calc(var(--spacing-unit) * 2);
        max-width: 1200px;
        margin: 0 auto;
        width: 100%;
	}
    .brand-name a {
        color: var(--color-text);
        text-decoration: none;
        font-size: 1.5rem;
        font-weight: 700;
    }
    .nav-links-desktop {
        display: none; /* Hide on mobile by default */
    }
    .nav-controls-mobile {
        display: flex; /* Show on mobile by default */
        align-items: center;
        gap: var(--spacing-unit);
    }
    .hamburger-menu {
        cursor: pointer;
        z-index: 20;
        color: var(--color-text);
        padding: var(--spacing-unit);
        margin: calc(-1 * var(--spacing-unit));
    }
    .mobile-menu {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: calc(var(--spacing-unit) * 2);
        background-color: var(--color-background);
        border-bottom: 1px solid var(--glass-border);
        max-height: 0;
        overflow: hidden;
        padding: 0;
        transition: max-height 0.3s ease-out, padding 0.3s ease-out;
    }
    .mobile-menu.is-open {
        max-height: 500px;
        padding: calc(var(--spacing-unit) * 3) 0;
    }
    .mobile-menu a {
        color: var(--color-text);
        text-decoration: none;
        font-size: 1.2rem;
        width: 100%;
        text-align: center;
        padding: var(--spacing-unit) 0;
    }
    @media (min-width: 768px) {
        .nav-links-desktop {
            display: flex; 
            align-items: center;
            gap: calc(var(--spacing-unit) * 4);
        }
        .nav-links-desktop a {
            color: var(--color-text);
            text-decoration: none;
            font-size: 1rem;
            transition: color 0.2s ease;
        }
        .nav-links-desktop a:hover {
            color: var(--color-primary);
        }
        .nav-controls-mobile {
            display: none; 
        }
        .mobile-menu {
            display: none;
        }
    }
</style>